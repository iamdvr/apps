<app-ui-config>

	<view-impl-class>com.pmc.fw.view.cli.CLIViewImpl</view-impl-class>
	<event-handler-class>com.pmc.aws.client.AWSViewEventHandler</event-handler-class>

	<view-config id="0" label="App View" not-leaf="true" />
	<view-config id="1" parent-id="0" label="S3 Services" not-leaf="true" />
	<view-config id="2" parent-id="0" label="Lambda Services" not-leaf="true" />
	<view-config id="3" parent-id="0" label="Set preferences" />

	<view-config id="1-1" parent-id="1" label="List existing S3 buckets" event-id="List-S3-Bucket" />

	<view-config id="1-2" parent-id="1" label="Create new S3 bucket" event-id="Create-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				<param name="regionId" value="ap-south-1" type="s" />			
			</inputs>
	</view-config>

	<view-config id="1-3" parent-id="1" label="List keys in a S3 bucket" event-id="List-Keys-In-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				
			</inputs>
	</view-config>

	<view-config id="1-4" parent-id="1" label="Create a key in S3 bucket from file" event-id="Create-Key-In-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				<param name="key" value="/key1" type="s" />
				<param name="filePathToUpload" value="./in/key-k1.txt" type="s" />			
			</inputs>
	</view-config>

	<view-config id="1-5" parent-id="1" label="Create a key in S3 bucket from file using MultiPart if the upload size > 5MB" event-id="Create-Key-In-S3-Bucket-Multipart">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				<param name="key" value="/key1" type="s" />
				<param name="filePathToUpload" value="./in/key-k1.txt" type="s" />			
			</inputs>
	</view-config>
	
	<view-config id="1-6" parent-id="1" label="Download content of a key in S3 bucket to a file" event-id="Get-Content-For-Key-In-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				<param name="key" value="/key1" type="s" />
				<param name="downloadContentToFile" value="./out/s3-key.txt" type="s" />			
			</inputs>
	</view-config>

	<view-config id="1-8" parent-id="1" label="Delete content of a key in S3 bucket" event-id="Delete-Key-In-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />
				<param name="key" value="/key1" type="s" />			
			</inputs>
	</view-config>
	

	<view-config id="1-9" parent-id="1" label="Delete S3 bucket" event-id="Delete-S3-Bucket">
			<inputs>
				<param name="bucketName" value="pmccode" type="s" />			
			</inputs>
	</view-config>


	<view-config id="2-1" parent-id="2" label="Show existing Lambda" />
	<view-config id="2-2" parent-id="2" label="Create new Lambda" />
	<view-config id="2-3" parent-id="2" label="Execute a Lambda" />

	
</app-ui-config>

